# NYC Housing Hub Environment Variables

# Application Settings
APP_NAME="NYC Housing Hub"
ENVIRONMENT="development"
DATA_PROVIDER="socrata"

# CORS Settings
CORS_ALLOW_ORIGINS="*"

# HTTP Client
HTTP_TIMEOUT_SECONDS=20

# Socrata API Configuration
SOCRATA_BASE_URL="https://data.cityofnewyork.us"
SOCRATA_APP_TOKEN="your_socrata_app_token_here"
SOCRATA_DATASET_ID="hg8x-zxpr"

# Database Configuration (PostgreSQL + PostGIS)
DB_HOST="localhost"
DB_PORT=5432
DB_USER="postgres"
DB_PASSWORD="your_password_here"
DB_NAME="nyc_housing"

# Data Provider Selection
# Options: "socrata" (direct API), "database" (PostgreSQL), "example" (mock data)
DATA_PROVIDER="database"

# Legacy SQLite (for backward compatibility)
DB_PATH="./data/nyc_housing.db"

# Census API (placeholder)
CENSUS_API_KEY="your_census_api_key_here"